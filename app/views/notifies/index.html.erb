<p id="notice"><%= notice %></p>

<h1>Notifies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifies.each do |notify| %>
      <tr>
        <td><%= notify.name %></td>
        <td><%= notify.content %></td>
        <td><%= link_to 'Show', notify %></td>
        <td><%= link_to 'Edit', edit_notify_path(notify) %></td>
        <td><%= link_to 'Destroy', notify, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button type="button" class="btn">
  <%= link_to 'New Notify', new_notify_path %>
</button>

<hr>
<button type="button" class="btn">
  <%= link_to 'Create Documents', new_document_path %>
</button>
